# vim:syntax=apparmor
# Author: Simon Deziel <simon.deziel@gmail.com>
#include <tunables/global>

/usr/sbin/acpid {
  #include <abstractions/base>

  /usr/sbin/acpid ix,

  /bin/dash ix,
  /etc/acpi/*.sh PUx,

  /etc/acpi/events/ r,
  /etc/acpi/events/** r,
  /dev/input/ r,
  /dev/input/event[0-9]* r,

  owner /run/acpid.pid w,
  owner /run/acpid.socket w,
  owner @{PROC}/[0-9]*/fd/ r,
}
